@using DIP_Blazor_App.Models
@using System.ComponentModel.DataAnnotations;
@inject ImageProcessor_ imgProcessor

<EditForm Model="input" OnValidSubmit="()=> imgProcessor.Preform()">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div>
        <label>Width</label>
        <InputNumber @bind-Value="input.Width" placeholder="Width" />
        <ValidationMessage For="@(()=>input.Width)"></ValidationMessage>
    </div>
    <div>
        <label>Height</label>
        <InputNumber @bind-Value="input.Height" placeholder="Height" />
        <ValidationMessage For="@(()=>input.Height)"></ValidationMessage>
    </div>
    <button class="btn btn-success btn-lg" type="submit">Preform Algorithm</button>
</EditForm>

@code {
    [Parameter]
    public ScaleInputModel input { get; set; }

    [Parameter]
    public EventCallback<MouseEventArgs> OnValidSubmitCallback { get; set; }
}
